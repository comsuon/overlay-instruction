<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="dimmed_color">#B3000000</color>
    <color name="highlight_stroke_color">@android:color/white</color>
    <dimen name="highlight_padding">4dp</dimen>
    <dimen name="highlight_stroke_width">2dp</dimen>
    <dimen name="instruction_content_margin">16dp</dimen>
    <dimen name="instruction_content_padding">12dp</dimen>
    <style name="GuideTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/highlight_stroke_color</item>
    </style>
    <style name="InstructionDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="oi_dimmedBackground">@color/dimmed_color</item>
        <item name="oi_guideBtnBG">@drawable/instruction_content_bg</item>
        <item name="oi_guideContentBG">@drawable/instruction_content_bg</item>
        <item name="oi_guideContentMargin">@dimen/instruction_content_margin</item>
        <item name="oi_guideContentPadding">@dimen/instruction_content_padding</item>
        <item name="oi_highlightPadding">@dimen/highlight_padding</item>
        <item name="oi_highlightStrokeStyle">dashed</item>
        <item name="oi_highlightStrokeColor">@android:color/white</item>
        <item name="oi_highlightStrokeWidth">@dimen/highlight_stroke_width</item>
        <item name="oi_guideContentTextStyle">@style/GuideTextStyle</item>
        <item name="oi_guideBtnTextStyle">@style/GuideTextStyle</item>
    </style>
    <declare-styleable name="OverlayInstruction">
        <attr format="reference" name="oi_dimmedBackground"/>
        <attr format="dimension" name="oi_highlightStrokeWidth"/>
        <attr format="color" name="oi_highlightStrokeColor"/>
        <attr format="enum" name="oi_highlightStrokeStyle">
            <enum name="line" value="0"/>
            <enum name="dashed" value="1"/>
            <enum name="dotted" value="2"/>
        </attr>
        <attr format="dimension" name="oi_highlightPadding"/>
        <attr format="dimension" name="oi_guideContentMargin"/>
        <attr format="dimension" name="oi_guideContentPadding"/>
        <attr format="reference" name="oi_guideContentBG"/>
        <attr format="reference" name="oi_guideContentTextStyle"/>
        <attr format="reference" name="oi_guideBtnBG"/>
        <attr format="reference" name="oi_guideBtnTextStyle"/>
    </declare-styleable>
</resources>