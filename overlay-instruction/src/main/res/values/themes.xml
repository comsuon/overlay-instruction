<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InstructionDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="oi_dimmedBackground">@color/dimmed_color</item>
        <item name="oi_guideBtnBG">@drawable/instruction_content_bg</item>
        <item name="oi_guideContentBG">@drawable/instruction_content_bg</item>
        <item name="oi_guideContentMargin">@dimen/instruction_content_margin</item>
        <item name="oi_guideContentPadding">@dimen/instruction_content_padding</item>
        <item name="oi_highlightPadding">@dimen/highlight_padding</item>
        <item name="oi_highlightStrokeStyle">dashed</item>
        <item name="oi_highlightStrokeColor">@android:color/white</item>
        <item name="oi_highlightStrokeWidth">@dimen/highlight_stroke_width</item>
        <item name="oi_guideContentTextStyle">@style/GuideTextStyle</item>
        <item name="oi_guideBtnTextStyle">@style/GuideTextStyle</item>
    </style>

    <style name="GuideTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/highlight_stroke_color</item>
    </style>
</resources>